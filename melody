server {
    server_name melody.pp.ua 87.249.49.83;

    location = /favicon.ico { access_log off; log_not_found off; }
    location /static/ {
        alias /root/melody/static/;
    }

    location / {
        include proxy_params;
        proxy_pass http://unix:/run/gunicorn.sock;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/melody.pp.ua/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/melody.pp.ua/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = melody.pp.ua) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name melody.pp.ua 87.249.49.83;
    return 404; # managed by Certbot
}